extends ../layout.jade

block head
    link(href="/css/manga.css" rel="stylesheet" type="text/css")
    link(href="/lib/jQuery.mmenu/src/css/jquery.mmenu.all.css" rel="stylesheet" type="text/css")
    
block scripts
    script.
        var manga =!{JSON.stringify(manga)};
    script(src="/lib/jQuery.mmenu/src/js/jquery.mmenu.min.all.js" type="text/javascript")
    script(src="/js/manga.js" type="text/javascript")
    
block content

    nav#manga-chapter-list
        ul
            each chapter in manga.chapters
                li
                    a(href="#")= chapter.title
                    
    a(id="manga-chapter-list-activator" href="#manga-chapter-list")
        i(class="mdi-action-list small red-text text-lighten-2 fake-link")
        
    section#manga
        
        .row
            #manga-cover(class="col s12 m12 l3")
                img(class="responsive-img z-depth-2 full-width" style={border: 'solid thin black'} src=manga.coverUrl)
            
            div(class="col s12 m12 l9")
                .row
                    div(class="col s12")
                        .card
                            .card-content
                                span(class="card-title grey-text text-darken-4")= manga.title.toUpperCase()
                                br
                                each genre in manga.genres
                                    i(class="grey-text lighten-3") #{genre}, 
                                br
                                hr(color="#f2f2f2")
                                p= manga.description
                #manga-stats.row
                    div(class="col s12 m6 l6")
                        .card(class="blue-grey white-text")
                            .card-content
                                i(class="fa fa-circle-o-notch fa-2x fa-spin")
                                h5.center-align= manga.status.toUpperCase()
                    
                    div(class="col s12 m6 l6")
                        .card(class="red lighten-2 white-text")
                            .card-content
                                i(class="fa fa-book fa-2x")
                                h5.center-align #{manga.numOfChapters} CHAPTERS
                                
                    div(class="col s12 m6 l6")
                        .card(class="teal lighten-2 white-text")
                            .card-content
                                i(class="fa fa-eye fa-2x")
                                h5.center-align #{manga.views.total.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,")} VIEWS
                    
                    div(class="col s12 m6 l6")
                        .card(class="blue lighten-2 white-text")
                            .card-content
                                i(class="fa fa-thumbs-up fa-2x")
                                h5.center-align #{manga.likes.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,")} VIEWS
                    
            #manga-preview.row
                h4(class="center-align letter-space red-text text-lighten-2") PREVIEW
                hr(color="#f2f2f2")
                                
                    