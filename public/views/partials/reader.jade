extends ../layout.jade

block head
    link(href="/lib/slick.js/slick/slick.css" rel="stylesheet" type="text/css")
    link(href="/lib/slick.js/slick/slick-theme.css" rel="stylesheet" type="text/css")
    link(href="/css/reader.css" rel="stylesheet" type="text/css")

block scripts
    script(src="/lib/slick.js/slick/slick.min.js" type="text/javascript")
    script(src="/js/reader.js" type="text/javascript")

block content
    
    #reader-controls(class="hide-on-small-only")
        i#control-light-toggle(class="tooltipped fa fa-lightbulb-o fa-2x" data-position="right" data-delay="50" data-tooltip="Night/Day Light")
        i#control-page-toggle(class="tooltipped fa fa-files-o fa-2x" data-position="right" data-delay="50" data-tooltip="Single/Dual Page")
        i#control-zoom-toggle(class="tooltipped fa fa-search-plus fa-2x" data-position="right" data-delay="50" data-tooltip="In/Out Zoom")
        i#control-slide-toggle(class="tooltipped fa fa-arrows-v fa-2x" data-position="right" data-delay="50" data-tooltip="Horizontal/Vertical View")
        i#control-expand(class="tooltipped fa fa-expand fa-2x" data-position="right" data-delay="50" data-tooltip="Fullscreen")
        
    #pages.full